@using ShopOnline.Models
@model PagedList.PagedList<Product>

<div class="shop__product__option">
    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-6 align-content-center">
            <div class="shop__product__option__left">
                <p>Tìm thấy @ViewBag.count sản phẩm</p>
            </div>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6">
            <div class="shop__product__option__right">
                <p>Sắp xếp theo:</p>
                <select>
                    <option value="asc">⇈ Giá thấp - cao</option>
                    <option value="des">⇊ Giá cao - thấp</option>
                </select>
            </div>
        </div>
    </div>
</div>
<div id="product-list">
    <div class="row">

        @if (Model.Count != 0)
        {
            foreach (var i in Model)
            {
                <div class="col-lg-4 col-md-6 col-sm-6">
                    @Html.Partial("_ProductItem", i, new ViewDataDictionary { { "returnUrl", ViewBag.returnUrl } })
                </div>
            }
        }
    </div>

    <div class="row">
        <div class="col">
            <div class="product__pagination">
                @Html.PagedListPager(Model, page => Url.Action("Shop", "Shop", new { page = page, searching = ViewBag.searching, price = ViewBag.price }))
            </div>
        </div>
    </div>
</div>
