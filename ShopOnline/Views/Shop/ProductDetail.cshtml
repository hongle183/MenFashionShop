                            <div class="product__details__pic__item">
                                <img src=@Url.Content("" + @Model.image) alt="">
                            </div>
                        </div>
                        <div class="tab-pane" id="tabs-4" role="tabpanel">
                            <div class="product__details__pic__item">
                                <img src="~/Content/img/shop-details/product-big-4.png" alt="">
