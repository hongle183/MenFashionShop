@using CaptchaMvc.HtmlHelpers
@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_LayoutPublicPage.cshtml";
}

<div class="container info spad">
    <div class="singinBx">
        @using (Html.BeginForm("SignIn", "User", FormMethod.Post, new { @id = "form-1", @enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            if (TempData["msgFailed"] != null)
            {
                <div class="alert alert-danger alert-dismissible bg-danger text-white border-0 fade show" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                    @TempData["msgFailed"]
                </div>
            }
            if (TempData["msgSuccess"] != null)
            {
                <div class="alert alert-success alert-dismissible bg-success text-white border-0 fade show" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    @TempData["msgSuccess"]
                </div>
            }
            
            <div class="form-group">
                <h2>@ViewBag.Title</h2>
            </div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <input id="username" name="username" type="text" placeholder="Số điện thoại/ Email">
                <span class="form-message"></span>
            </div>

            <div class="form-group">
                <input id="password" name="password" type="password" placeholder="Mật khẩu">
                <span class="form-message"></span>
            </div>

            <div class="form-group">
                @Html.Captcha("Try-Another", "Enter the text you see above", 4, "Is required field", true)
                <span class="form-message"></span>
                <p style="color:red">@ViewBag.captcha</p>
            </div>

            <div class="form-group">
                <button type="submit" class="btn-submitForm site-btn">Đăng nhập</button>
            </div>
            <p class="signup text-uppercase">Bạn chưa có tài khoản ? <a href="@Url.Action("Register", "User")">Đăng ký.</a></p>
        }
    </div>
</div>

<script>
    var obj = document.querySelector(".navlist li:nth-child(1)");
    obj.classList.remove("active");
</script>
<script src="~/Content/js/validator.js"></script>
<script>
    Validator({
        form: '#form-1',
        formGroupSelector: '.form-group',
        errorSelector: '.form-message',
        rules: [
            Validator.isRequired('#username'),
            Validator.isRequired('#password'),
            Validator.isRequired('#CaptchaInputText'),
        ],
    });
</script>