<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Xác nhận đơn hàng</title>
    <!--favicon-->
    <link rel="shortcut icon" type="image/png" href="~/Content/img/icon/favicon.png" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />

    <link rel="stylesheet" href="~/Content/css/bootstrap.min.css" type="text/css">
    <link rel="stylesheet" href="~/Content/css/style.css" type="text/css">
</head>
<body>
    <!-- Page Preloder -->
    <div id="preloder">
        <div class="loader"></div>
    </div>

    <div class="box-detail card">
        @using (Html.BeginForm("SubmitBill", "Cart", FormMethod.Post))
        {
            <div class="text-center"><img src="~/Content/img/logo.png" alt="" style="max-width:40%;"></div>
            <h4 class="mt-3 text-center">FashionStore</h4>
            <p class="text-center m-0">19 Đ. Nguyễn Hữu Thọ, Quận 7</p>
            <p class="text-center m-0">Tel: +84 338 650 639</p>
            <h4 class="theme-color mb-5 text-center">Thanks for your order</h4>
            <span class="theme-color">Payment Summary <img src="~/Content/img/icon/checked.png" alt="" style="width: 8%;"></span>
            <div class="d-flex justify-content-between"> <span>Số hóa đơn: <b>0125</b></span></div>
            <div class="d-flex justify-content-between">
                <span>
                    Ngày:
                    <script>
                        const today = new Date();
                        const day = String(today.getDate()).padStart(2, '0'); // Lấy ngày (2 chữ số)
                        const month = String(today.getMonth() + 1).padStart(2, '0'); // Lấy tháng (thêm 1 vì getMonth() trả về 0-11)
                        const year = today.getFullYear(); // Lấy năm đầy đủ (4 chữ số)

                        document.write(`${day}/${month}/${year}`);
                    </script>
                </span> <span>Giờ: 17:46</span>
            </div>
            <div class="mb-3">
                <hr class="new1">
            </div>
            <div class="d-flex justify-content-between"> <span class="font-weight-bold">Tổng cộng(SL: @ViewBag.quanlityItem sản phẩm)</span> <span class="text-muted">@String.Format("{0:N0}", ViewBag.totalPrice) ₫</span> </div>
            <div class="d-flex justify-content-between"> <span>Vận chuyển</span> <span>0 ₫</span> </div>
            <div class="d-flex justify-content-between mt-3"> <span class="font-weight-bold">Thanh toán</span> <span class="font-weight-bold theme-color">@String.Format("{0:N0}", ViewBag.totalPrice) ₫</span> </div>

            <div class="text-center mt-5"> <a href="/trang-chu" class="outline-btn btn">Back to shop</a></div>
        }
    </div>
    <script src="~/Content/js/jquery-3.7.1.min.js"></script>
    <script src="~/Content/js/bootstrap.min.js"></script>
    <script src="~/Content/js/main.js"></script>
</body>
</html>

