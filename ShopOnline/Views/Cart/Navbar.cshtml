@using ShopOnline.Models
@{
    Member user = (Member)Session["info"];
}

<div class="col-lg-3 col-md-3 my-auto">
    <div class="header__nav__option">
        <a href="#" class="search-switch"><img src="~/Content/img/icon/search.png" style="width:10%;" alt=""></a>
        <a href="#"><img src="~/Content/img/icon/favorite-folder.png" style="width:10%;" alt=""></a>
        <a href="/gio-hang"><img src="~/Content/img/icon/bagg.png" style="width:10%" alt=""><span>@ViewBag.quanlityItem</span></a>
        @*<div class="price" style="margin-right:12px;">$ @ViewBag.totalPrice</div>*@

        @if (Session["info"] != null)
        {
            
            <div class="header__nav__hover">

                <span>
                    <img class="avatar" src=@Url.Content("" + user.avatar) style="width: 24px;height:24px;"> @user.lastName<i class="arrow_carrot-down"></i></span>
                <ul>
                    <li>
                        <a href="@Url.Action("EditProfie", "Home", new { memberId = user.memberId })">
                            <img src="~/Content/img/icon/profile.png" style="width:10%;" alt=""/> Edit profie
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("ChangePassword", "Home", new { memberId = user.memberId })">
                            <img src="~/Content/img/icon/password.png" style="width:10%;" alt=""/> Change password</a>
                    </li>
                    <li>
                        <a href="@Url.Action("MyOrder", "Home", new { memberId = user.memberId })">
                            <img src="~/Content/img/icon/orderlist-history.png" style="width:10%;" alt=""/> My order</a>
                    </li>
                    <li>@Html.ActionLink("Log Out", "logout", "User")</li>
                </ul>
            </div> }
        else
        {
             <a href="/dang-nhap">Sign in</a>
        }
    </div>
</div>

