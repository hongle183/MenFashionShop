@{
    ViewBag.Title = "Bài viết";
    Layout = "~/Views/Shared/_LayoutPublicPage.cshtml";
}
@using PagedList.Mvc
@using ShopOnline.Models
@model PagedList.PagedList<Article>

<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__text">
                    <h4>@ViewBag.Title</h4>
                    <div class="breadcrumb__links">
                        <a href="/trang-chu">Trang chủ</a>
                        <span>@ViewBag.Title</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Blog Section Begin -->
<section class="blog spad">
    <div class="container">
        <div class="row">
            @foreach (var i in Model)
            {
                <div class="col-lg-4 col-md-6 col-sm-6">
                    @Html.Partial("_BlogItem", i)
                </div>
            }
        </div>
    </div>
    <div class="product__pagination">
        @Html.PagedListPager(Model, page => Url.Action("ArticleList", new { page = page }))
    </div>
</section>
<!-- Blog Section End -->

<script>
    var obj = document.querySelector(".navbar li:nth-child(1)");
    obj.classList.remove("active");
    var liTags = document.querySelectorAll('.navbar li');
    for (var i = 0; i < liTags.length; i++) {
        if (liTags[i].getAttribute('data-value') == "bai-viet") {
            liTags[i].classList.add("active");
        }
    }
</script>