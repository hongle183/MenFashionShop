@using ShopOnline.Models
@model List<Invoince>
@{
    ViewBag.Title = "Đơn hàng của tôi";
    Layout = "~/Views/Shared/_LayoutPublicPage.cshtml";
}

<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__text">
                    <h4>@ViewBag.Title</h4>
                    <div class="breadcrumb__links">
                        <a href="/trang-chu">Trang chủ</a>
                        <span>@ViewBag.Title</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<link rel="stylesheet" href="~/Content/css/WatchOrders.css">
@if (TempData["msgOrder"] != null)
{
    <script>
        showToast({
            type: "success",
            message: "@TempData["msgOrder"].ToString().Replace("\"", "\\\"")"
        });
    </script>
}
else if (TempData["msgOrderFailed"] != null)
{
    <script>
        showToast({
            type: "danger",
            message: "@TempData["msgOrderFailed"].ToString().Replace("\"", "\\\"")"
        });
    </script>
}
@if (TempData["msgPaidFailed"] != null)
{
    <script>
        showToast({
            type: "danger",
            message: "@TempData["msgPaidFailed"].ToString().Replace("\"", "\\\"")"
        });
    </script>
}
@if (TempData["msgCancelOrder"] != null)
{
    <script>
        showToast({
            type: "success",
            message: "@TempData["msgCancelOrder"].ToString().Replace("\"", "\\\"")"
        });
    </script>
}
else if (TempData["msgCancelOrderFailed"] != null)
{
    <script>
        showToast({
            type: "danger",
            message: "@TempData["msgCancelOrderFailed"].ToString().Replace("\"", "\\\"")"
        });
    </script>
}

<div class="container my__order">
    <ul class="nav nav-pills nav-justified">
        <li class="nav-item">
            <a class="nav-link active" href="#" data-status="all">Tất cả</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#" data-status="pending">Chờ xác nhận</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#" data-status="confirmed">Vận chuyển</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#" data-status="shipping">Chờ giao hàng</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#" data-status="completed">Hoàn thành</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#" data-status="cancelled">Đã hủy</a>
        </li>
    </ul>
    @if (Model.Count == 0)
    {
        <div class="text-center my-5">
            <img src="~/Content/img/Orders/empty_state.png" class="img-fluid" alt="Responsive image" width="30%">
            <h5 style="margin: 16px 0;">Chưa có đơn hàng nào.</h5>
            <a href="/san-pham" class="btn outline-btn">SHOP NOW</a>
        </div>
    }
    else
    {
        <div id="ordersContainer">
            @foreach (var i in Model)
            {
                <div class="card mb-5">
                    <div class="top row justify-content-between px-sm-3 pt-sm-4 px-0">
                        <h5>ĐƠN HÀNG <span class="font-weight-bold"><a href="@Url.Action("InvoinceDetail", "Home", new { invoinceId = i.invoinceId })">#@i.invoinceId</a></span></h5>
                        <p class="mb-0">Tổng tiền: <span class="font-weight-bold">@String.Format("{0:0,0}", i.totalMoney) ₫</span></p>
                    </div> <!-- Add class 'active' to progress -->
                    <div class="row d-flex justify-content-center">
                        <div class="col-12">
                            @if (i.status.Equals("pending"))
                            {
                                <ul id="progressbar" class="text-center">
                                    <li class="active step0"></li>
                                    <li class="step0"></li>
                                    <li class="step0"></li>
                                    <li class="step0"></li>
                                </ul>
                            }
                            else if (i.status.Equals("confirmed"))
                            {
                                <ul id="progressbar" class="text-center">
                                    <li class="active step0"></li>
                                    <li class="active step0"></li>
                                    <li class="step0"></li>
                                    <li class="step0"></li>
                                </ul>
                            }
                            else if (i.status.Equals("shipping"))
                            {
                                <ul id="progressbar" class="text-center">
                                    <li class="active step0"></li>
                                    <li class="active step0"></li>
                                    <li class="active step0"></li>
                                    <li class="step0"></li>
                                </ul>
                            }
                            else if (i.status.Equals("completed"))
                            {
                                <ul id="progressbar" class="text-center">
                                    <li class="active step0"></li>
                                    <li class="active step0"></li>
                                    <li class="active step0"></li>
                                    <li class="active step0"></li>
                                </ul>
                            }
                            else if (i.status.Equals("cancelled"))
                            {
                                <ul id="progressbar" class="text-center">
                                    <li class="step0"></li>
                                    <li class="step0"></li>
                                    <li class="step0"></li>
                                    <li class="step0"></li>
                                </ul>
                            }
                        </div>
                    </div>
                    <div class="row justify-content-between top">
                        <div class="row d-flex icon-content">
                            <img class="icon" src="~/Content/img/Orders/process-check.png">
                            <div class="d-flex flex-column">
                                <p class="font-weight-bold">Order<br>Processed</p>
                            </div>
                        </div>
                        <div class="row d-flex icon-content">
                            <img class="icon" src="~/Content/img/Orders/process-product.png">
                            <div class="d-flex flex-column">
                                <p class="font-weight-bold">Order<br>Confirmed</p>
                            </div>
                        </div>
                        <div class="row d-flex icon-content">
                            <img class="icon" src="~/Content/img/Orders/process-delivery.png">
                            <div class="d-flex flex-column">
                                <p class="font-weight-bold">Order<br>Shipping</p>
                            </div>
                        </div>
                        <div class="row d-flex icon-content">
                            <img class="icon" src="~/Content/img/Orders/process-home.png">
                            <div class="d-flex flex-column">
                                <p class="font-weight-bold">Order<br>Arrived</p>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer px-sm-3 pt-sm-4 px-0">
                        <div class="row text-center ">
                            <div class="col my-auto">
                                <b><a href="@Url.Action("InvoinceDetail", "Home", new { invoinceId = i.invoinceId })">Theo dõi</a></b>
                            </div>
                            <div class="col my-auto">
                                <b>
                                    @if (!i.status.Equals("completed") && !i.status.Equals("cancelled") && !i.paymentStatus.Equals("paid"))
                                    {
                                        <a href="@Url.Action("Cancel", "Home", new { id = i.invoinceId})" onclick="return confirm('Are you sure you want to cancel this order?')">Hủy đơn</a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Hủy đơn</span>
                                    }
                                </b>
                            </div>
                            <div class="col my-auto">
                                <b>
                                    @if (i.paymentStatus.Equals("paid"))
                                    {
                                        <span style="color: #a0bcde">Đã thanh toán</span>
                                    }
                                    else if ((i.paymentStatus.Equals("failed") || i.paymentStatus.Equals("pending")) && i.paymentMethod.Equals("vnpay"))
                                    {
                                        <a href="@Url.Action("CreatePaymentUrl", "Payment", new { invoinceId = i.invoinceId })" target="_blank">Thanh toán</a>
                                    }
                                    else
                                    {
                                        <span>Thanh toán tiền mặt</span>
                                    }
                                </b>
                            </div>
                            <div class="col my-auto"><img class="img-fluid" src="~/Content/img/Orders/three-dot.png" width="30" height="30"></div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<script>
    var obj = document.querySelector(".navbar li:nth-child(1)");
    obj.classList.remove("active");
</script>
<script>
    $(document).ready(function () {
        $('.nav-pills .nav-link').on('click', function (e) {
            e.preventDefault();
            var status = $(this).data('status');
            $.ajax({
                url: '@Url.Action("GetOrdersByStatus", "Home")',
                type: 'GET',
                dataType: 'json',
                data: { status: status },
                success: function (orders) {
                    var html = '';
                    $.each(orders, function (i, order) {
                        html += `
                            <div class="card mb-5">
                                <div class="top row justify-content-between px-sm-3 pt-sm-4 px-0">
                                    <h5>ĐƠN HÀNG <span class="font-weight-bold"><a href="@Url.Action("InvoinceDetail", "Home")/${order.invoinceId}">#${order.invoinceId}</a></span></h5>
                                    <p class="mb-0">Tổng tiền: <span class="font-weight-bold">${Number(order.totalMoney).toLocaleString('vi-VN')} ₫</span></p>
                                </div>
                                <div class="row d-flex justify-content-center">
                                    <div class="col-12">`;
                        if (order.status === "pending") {
                            html += `
                                <ul id="progressbar" class="text-center">
                                    <li class="active step0"></li>
                                    <li class="step0"></li>
                                    <li class="step0"></li>
                                    <li class="step0"></li>
                                </ul>`;
                        }
                        else if (order.status === "confirmed") {
                            html += `
                                <ul id="progressbar" class="text-center">
                                    <li class="active step0"></li>
                                    <li class="active step0"></li>
                                    <li class="step0"></li>
                                    <li class="step0"></li>
                                </ul>`;
                        }
                        else if (order.status === "shipping") {
                            html += `
                                <ul id="progressbar" class="text-center">
                                    <li class="active step0"></li>
                                    <li class="active step0"></li>
                                    <li class="active step0"></li>
                                    <li class="step0"></li>
                                </ul>`;
                        }
                        else if (order.status === "completed") {
                            html += `
                                <ul id="progressbar" class="text-center">
                                    <li class="active step0"></li>
                                    <li class="active step0"></li>
                                    <li class="active step0"></li>
                                    <li class="active step0"></li>
                                </ul>`;
                        }
                        else if (order.status === "cancelled") {
                            html = `
                                <ul id="progressbar" class="text-center">
                                    <li class="step0"></li>
                                    <li class="step0"></li>
                                    <li class="step0"></li>
                                    <li class="step0"></li>
                                </ul>`;
                        }
                        html += `
                                </div>
                            </div>
                            <div class="row justify-content-between top">
                                <div class="row d-flex icon-content">
                                    <img class="icon" src="@Url.Content("~/Content/img/Orders/process-check.png")">
                                    <div class="d-flex flex-column">
                                        <p class="font-weight-bold">Order<br>Processed</p>
                                    </div>
                                </div>
                                <div class="row d-flex icon-content">
                                    <img class="icon" src="@Url.Content("~/Content/img/Orders/process-product.png")">
                                    <div class="d-flex flex-column">
                                        <p class="font-weight-bold">Order<br>Confirmed</p>
                                    </div>
                                </div>
                                <div class="row d-flex icon-content">
                                    <img class="icon" src="@Url.Content("~/Content/img/Orders/process-delivery.png")">
                                    <div class="d-flex flex-column">
                                        <p class="font-weight-bold">Order<br>Shipping</p>
                                    </div>
                                </div>
                                <div class="row d-flex icon-content">
                                    <img class="icon" src="@Url.Content("~/Content/img/Orders/process-home.png")">
                                    <div class="d-flex flex-column">
                                        <p class="font-weight-bold">Order<br>Arrived</p>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer px-sm-3 pt-sm-4 px-0">
                                <div class="row text-center ">
                                    <div class="col my-auto">
                                        <b><a href="@Url.Action("InvoinceDetail", "Home")/${order.invoinceId}">Theo dõi</a></b>
                                    </div>
                                    <div class="col my-auto">
                                        <b>`;
                        if ((order.status !== "completed" && order.status !== "cancelled") && order.paymentStatus !== "paid") {
                            html += `<a href="@Url.Action("Cancel", "Home")/${order.invoinceId}" onclick="return confirm('Are you sure you want to cancel this order?')">Hủy đơn</a>`;
                        } else {
                            html += '<span class="text-muted">Hủy đơn</span>';
                        }
                        html += `
                                        </b>
                                    </div>
                                    <div class="col my-auto">
                                        <b>`;
                        if (order.paymentStatus === "paid") {
                            html += '<span style = "color: #a0bcde"> Đã thanh toán</span>';
                        }
                        else if ((order.paymentStatus === "failed" || order.paymentStatus === "pending") && order.paymentMethod === "vnpay") {
                            html += `<a href="@Url.Action("CreatePaymentUrl", "Payment")/${order.invoinceId}" target="_blank">Thanh toán</a>`;
                        } else {
                            html += '<span>Thanh toán tiền mặt</span>';
                        }
                        html += `
                                        </b>
                                    </div>
                                    <div class="col my-auto"><img class="img-fluid" src="@Url.Content("~/Content/img/Orders/three-dot.png")" width="30" height="30"></div>
                                </div>
                            </div>
                        </div>`;
                    });
                    $('#ordersContainer').html(html);
                },
                error: function () {
                    alert('Có lỗi xảy ra, vui lòng thử lại!');
                }
            });
            $('.nav-pills .nav-link').removeClass('active');
            $(this).addClass('active');
        });
    });
</script>